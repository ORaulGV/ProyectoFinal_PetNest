<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProyectoFinal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProyectoFinal"
    xmlns:views="clr-namespace:ProyectoFinal.Views"
    Title="ProyectoFinal">


    <!-- Ítems del menú hamburguesa -->
    <FlyoutItem Title="Inicio" Icon="home.png">
        <ShellContent Route="MainPagePets" ContentTemplate="{DataTemplate views:MainPagePets}" />
    </FlyoutItem>

    <FlyoutItem Title="Ajustes" Icon="settings.png">
        <ShellContent Route="AjustesPage" ContentTemplate="{DataTemplate views:AjustesPage}" />

        
    </FlyoutItem>
    <!-- Rutas internas (ocultas del menú) -->
    <ShellContent Route="SplashPage" ContentTemplate="{DataTemplate views:SplashPage}" />
    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="RegistroPage" ContentTemplate="{DataTemplate views:RegistroPage}" />
    
    
</Shell>

   